    <style name="Theme.PictureViewer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PictureViewer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
